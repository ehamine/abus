# ----------------------------------------------------------------------------
#
# @brief  Makefile for the json wrapper
# @author Thierry GAYET - Eurogiciel
# @date   january 2012
#
# ----------------------------------------------------------------------------
#
# For enabling debug messages :									-D_JSON_DBG=1
# For enabling a main entry for the standalone unit test : 		-D__MAIN__=1
#
# ----------------------------------------------------------------------------

all:
	gcc -g -ggdb -c jsonwrp.c -I. -D__MAIN__=1 -D_JSON_DBG=1 -o jsonwrp.o
	gcc jsonwrp.o ./.libs/json.o -o wrpTest
	file wrpTest
	ls

test: wrpTest
	./wrpTest ./tests/good/fileTestWrp.json
	
debug: wrpTest
	ddd ./wrpTest

clean:
	rm -f jsonwrp.o
	
#
# --- EOF ---
#
